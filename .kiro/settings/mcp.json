{
  "mcpServers": {
    "aws-kb-retrieval": {
      "command": "uvx",
      "args": ["knowledge-mcp.global.api.aws"],
      "env": {
        "AWS_REGION": "us-west-2"
      }
    },
    "aws-frontend": {
      "command": "uvx",
      "args": ["awslabs.frontend-mcp-server"]
    },
    "aws-cdk": {
      "command": "uvx",
      "args": ["mcp-server-aws-cdk"]
    },
    "brave-search": {
      "command": "uvx",
      "args": ["mcp-server-brave-search"],
      "env": {
        "BRAVE_API_KEY": ""
      }
    },
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    }
  }
}
